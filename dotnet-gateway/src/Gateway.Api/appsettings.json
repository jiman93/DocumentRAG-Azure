{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Gateway": {
    "PythonRagApiUrl": "http://localhost:8000",
    "EnableCaching": true,
    "CacheExpirationMinutes": 30,
    "MaxRequestSizeBytes": 10485760
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "https://*.azurestaticapps.net"
    ]
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "Window": "00:01:00",
    "QueueLimit": 2
  },
  "Authentication": {
    "Enabled": false,
    "Authority": "https://login.microsoftonline.com/{tenant-id}",
    "Audience": "api://gateway-api",
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true
  },
  "ApplicationInsights": {
    "InstrumentationKey": "",
    "ConnectionString": ""
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Gateway API",
        "Uri": "http://localhost:7001/health"
      },
      {
        "Name": "Python RAG API",
        "Uri": "http://localhost:8000/health"
      }
    ],
    "EvaluationTimeInSeconds": 30,
    "MinimumSecondsBetweenFailureNotifications": 60
  }
}
